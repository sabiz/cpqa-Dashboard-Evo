#:kivy 1.0.9
<InitScreen>
    BoxLayout:
        AutoFitLabel:
            text: "Initializing..."
<MainScreen>:
    value_label: value_label
    value_unit_label: value_unit_label
    value_name_label: value_name_label
    power_button: power_button
    FloatLayout:
        size: root.size
        BoxLayout:
            orientation: "vertical"
            size: root.size
            BoxLayout:
                orientation: "horizontal"
                AutoFitLabel:
                    id: value_label
                    text: "99.9"
                    pos_hint: {'center_x': 0.5}
                    size_hint_x: 0.8
                AutoFitLabel:
                    id: value_unit_label
                    text: "---"
                    size_hint_x: 0.15
                Widget:
                    size_hint_x: 0.05

            BoxLayout:
                size_hint_y: 0.2
                canvas.before:
                    Color:
                        rgba: 0.13, 0.1, 0.1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                ValueNameLabel:
                    id: value_name_label
                    text: "@@@@@@@"
                    color: 0.686, 0.149, 0.333, 1
        PowerButton:
            id: power_button
            size_hint_y: 0.1
            pos_hint: {'center_x': 0.9, 'y': 0.85}
